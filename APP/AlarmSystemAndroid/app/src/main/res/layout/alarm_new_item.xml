<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/item_bg_press_color"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警地址："
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_alarm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警地址"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/text_size_14"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警时间："
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警时间"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/text_size_14"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_alarm_clsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="处理时间"
        android:textColor="@color/text_gray_3"
        android:textSize="@dimen/text_size_14"/>




    <TextView
        android:id="@+id/tv_alarm_clfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="处理方式"
        android:textColor="@color/text_gray_3"
        android:textSize="@dimen/text_size_14"/>



    <TextView
        android:id="@+id/tv_alarm_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="处理人"
        android:textColor="@color/text_gray_3"
        android:textSize="@dimen/text_size_14"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警图片："
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:id="@+id/iv_alarm_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_alarm_dispose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去处理"
        android:textSize="@dimen/text_size_14"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/blue_button"
        android:gravity="center"
        />


</LinearLayout>